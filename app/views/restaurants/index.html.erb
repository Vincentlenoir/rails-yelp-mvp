<div class="navbar navbar-light bg-light">
<%= link_to 'Homepage', restaurants_path, class: "btn btn-light" %>
<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-light" %>
</div>

<h2 class="text-center font-weight-bold"> All restaurants </h2>
<ul class="list-group row justify-content-center">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-around align-items-center h3"><%= link_to restaurant.name, restaurant_path(restaurant.id) %></li>
    <li class="list-group-item d-flex justify-content-around align-items-center p mb-5"><%= restaurant.address%> <%=restaurant.category%></li>
  <% end %>
</ul>
